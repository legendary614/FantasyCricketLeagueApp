<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cricmybrain.cricmybrainandroidapp"
    android:versionCode="1"
    android:versionName="@string/version_name">

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RemoteServerActivity"
            android:label="RemoteServerActivity">
            <intent-filter>
                <action android:name="com.cricmybrain.cricmybrainandroidapp.RemoteServerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalServerActivity"
            android:label="LocalServerActivity">
            <intent-filter>
                <action android:name="com.cricmybrain.cricmybrainandroidapp.LocalServerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutCmbActivity"
            android:label="AboutCmbActivity">
            <intent-filter>
                <action android:name="com.cricmybrain.cricmybrainandroidapp.AboutCmbActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>